@model IEnumerable<Category> 

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

    <div>
        <a class="btn btn-success" href="/category/Create">Create</a>
    </div><br />
    <table class="table table-hover" width="100%">
        <tr>
            <td> Name </td>
            <td> Desc </td>
            <td> Date </td>
            <td>Action</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-primary" href="/Category/Edit/@item.Id">Edit</a>
                    <a class="btn btn-danger" href="/Category/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        
        }
    </table>